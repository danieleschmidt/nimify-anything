{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Nimify CLI: Create Model",
      "type": "python",
      "request": "launch",
      "module": "nimify.cli",
      "args": ["create", "tests/fixtures/model.onnx", "--name", "test-model", "--debug"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "NIMIFY_ENV": "development",
        "DEBUG": "true"
      }
    },
    {
      "name": "Nimify CLI: Build Container",
      "type": "python",
      "request": "launch",
      "module": "nimify.cli",
      "args": ["build", "test-model", "--tag", "localhost:5000/test-model:debug"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "NIMIFY_ENV": "development",
        "DEBUG": "true"
      }
    },
    {
      "name": "Python: Pytest - All Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--tb=short", "--cov=src"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
